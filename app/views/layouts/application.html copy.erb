<!DOCTYPE html>
<html>
  <head>
    <title>ProjectD32</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="https://www.thehackingproject.org/">THP /</a>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/">Bienvenue</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/">Nouvel evenement</a>
        </li>

        <% if user_signed_in? %>
        
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Mon profil
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="#">Mon profil</a></li>
            <li><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
          </ul>
        </li>

        <% else %>
        
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          S'inscrire / Se connecter
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <li><%= link_to "S inscrire", new_user_registration_path, class: "dropdown-item" %></li>
            <li><%= link_to "Se connecter", new_user_session_path, class: "dropdown-item" %></li>
          </ul>
        </li>

        <% end %>


        </ul>
    </div>
      <form class="form-inline">
      <% if user_signed_in? %>
      <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger my-2 my-sm-0" %>
    <% else %>
      <%= link_to "Se connecter", user_session_path, class: "btn btn-outline-success my-2 my-sm-0" %>
    <% end %>
  </form>
  </div>
</nav>

    <%= yield %>

    <!-- Footer -->
<footer class="bg-dark text-center text-lg-start text-muted">
  <!-- Copyright -->
  <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
    © 2021 Copyright:
    <a class="text-light text-muted" href="https://mdbootstrap.com/">MDBootstrap.com</a>
  </div>
  <!-- Copyright -->
</footer>


  </body>
</html>
